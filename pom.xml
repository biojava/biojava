	<!-- https://github.com/chhh/sonatype-ossrh-parent/blob/master/pom.xml -->
	<distributionManagement>
		<snapshotRepository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
